{
  "name": "vue-useoptimistic",
  "version": "1.0.0",
  "description": "opinionated VueJS implementation of useOptimistic react hook",
  "type": "module",
  "files": [
    "dist"
  ],
  "main": "./dist/vue-useoptimistic.umd.cjs",
  "module": "./dist/vue-useoptimistic.js",
  "types": "./dist/main.d.ts",
  "exports": {
    ".": {
      "import": "./dist/vue-useoptimistic.js",
      "require": "./dist/vue-useoptimistic.umd.cjs",
      "types": "./dist/main.d.ts"
    }
  },
  "scripts": {
    "dev": "vite",
    "build": "vue-tsc && vite build",
    "build:demo": "vite build -c demo-vite.config.ts",
    "preview": "vite preview -c demo-vite.config.ts",
    "test": "vitest",
    "coverage": "vitest run --coverage"
  },
  "keywords": [
    "vue",
    "vue3",
    "useOptimistic",
    "optimistic"
  ],
  "author": "Elliott ZWERTVAEGHER <elliott.zz59@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "~20.5.7",
    "@vitejs/plugin-vue": "~4.3.4",
    "@vitest/coverage-v8": "~0.34.3",
    "jsdom": "~22.1.0",
    "sass": "~1.67.0",
    "typescript": "~5.2.2",
    "vite": "~4.4.9",
    "vite-plugin-dts": "~3.5.3",
    "vitest": "~0.34.3",
    "vue-tsc": "~1.8.8"
  },
  "dependencies": {
    "vue": "~3.3.4"
  },
  "repository": {
    "type": "github",
    "url": "https://github.com/shoko31/vue-useoptimistic"
  },
  "bugs": {
    "url": "https://github.com/shoko31/vue-useoptimistic/issues"
  },
  "homepage": "https://github.com/shoko31/vue-useoptimistic"
}
